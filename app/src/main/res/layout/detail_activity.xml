<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/userPfp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="75dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/activityName"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="25dp"
        android:text="Name of activity"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userPfp"
        tools:textSize="20sp"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/paxText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="Pax"
        app:layout_constraintTop_toBottomOf="@id/activityName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="18sp" />

    <TextView
        android:id="@+id/descText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="60dp"
        android:text="Description:"
        app:layout_constraintTop_toBottomOf="@id/paxText"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="60dp"
        android:text="Location:"
        app:layout_constraintTop_toBottomOf="@id/descText"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/genderText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="60dp"
        android:text="Gender:"
        app:layout_constraintTop_toBottomOf="@id/locationText"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/skillText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="60dp"
        android:text="Skill Level:"
        app:layout_constraintTop_toBottomOf="@id/genderText"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="60dp"
        android:text="Date:"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skillText"
        tools:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="60dp"
        android:text="Time:"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        tools:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descInfo"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="56dp"
        android:text="Description"
        app:layout_constraintTop_toBottomOf="@id/paxText"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        tools:textSize="15sp" />

    <TextView
        android:id="@+id/locationInfo"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="56dp"
        android:text="Location"
        app:layout_constraintTop_toBottomOf="@id/descInfo"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        tools:textSize="15sp" />

    <TextView
        android:id="@+id/genderInfo"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="56dp"
        android:text="Gender"
        app:layout_constraintTop_toBottomOf="@id/locationInfo"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        tools:textSize="15sp" />

    <TextView
        android:id="@+id/skillInfo"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="56dp"
        android:text="Skill Level"
        app:layout_constraintTop_toBottomOf="@id/genderInfo"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        tools:textSize="15sp" />

    <TextView
        android:id="@+id/dateInfo"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="56dp"
        android:text="Date"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skillInfo"
        tools:textSize="15sp" />

    <TextView
        android:id="@+id/timeInfo"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="56dp"
        android:text="Time"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateInfo"
        tools:textSize="15sp" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeInfo"
        android:layout_marginTop="35dp"
        android:text="Back" />

</androidx.constraintlayout.widget.ConstraintLayout>